{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "store:default",
    "fs:default",
    {
      "identifier": "fs:scope",
      "allow": [{ "path": "**" }]
    },
    {
      "identifier": "fs:allow-watch",
      "allow": [{ "path": "**" }]
    },
    {
      "identifier": "fs:allow-remove",
      "allow": [{ "path": "**" }]
    }
  ]
}